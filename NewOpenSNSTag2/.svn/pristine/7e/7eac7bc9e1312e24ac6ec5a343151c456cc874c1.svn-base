                $('.upload-img-box').html(
                        '<div class="upload-pre-item"><img src="http://image.lz517.com/catering' + src + '"/></div>'
                );
            } else {
                toast.error('{:L("_UPLOAD_FAIL_")}', '{:L("_TIP_GENTLE_")}');
            }
        }


        $('.time').datetimepicker({
            language:'zh-CN',
            weekStart:1,
            todayBtn:1,
            autoclose:1,
            todayHighlight:1,
            startView:2,
            minView:0,
            forceParse:0,
            format: 'yyyy-mm-dd hh:ii'
        });

    </script>

    <script>
        //拼接上入围理由
        function htmlReason(i){
            $.post("{:U('OnlineVote/editor')}", {
                "id": "myeditor_edit"+i,
                "name": "itemReason"+i,
                "width": "800px",
                "height": "200px",
                "config": "reason"
            }, function (res) {
                $("#reason"+i).html(res);
            });
        }
    </script>
</block>