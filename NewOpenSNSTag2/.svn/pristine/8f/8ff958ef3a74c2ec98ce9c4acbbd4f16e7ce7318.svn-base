    function isEnergency(){
        var urgent_level = $("input[name='urgent_level']:checked").val();
        if(Number(urgent_level) === 2){
            weui.alert("您已选择紧急订单，此订单会在2小时内上门处理(限六环内)，维修服务费不同于普通订单，收费标准点击右上角“服务须知”查看");
        }
