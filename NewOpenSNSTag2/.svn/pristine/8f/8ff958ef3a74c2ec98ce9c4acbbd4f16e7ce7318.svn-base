<script type="text/javascript">
    // 缩略图预览
    $('#uploaderFiles').on('click', function(e){
        var target = e.target;

        while(!target.classList.contains('weui-uploader__file') && target){
            target = target.parentNode;
        }
        if(!target) return;

        var url = target.getAttribute('style') || '';
        var id = target.getAttribute('data-id');

        if(url){
            url = url.match(/url\((.*?)\)/)[1].replace(/"/g, '');
        }
        var gallery = weui.gallery(url, {
            className: 'custom-name',
            onDelete: function(){
                weui.confirm('确定删除该图片？', function(){
                    --uploadCount;
                    uploadCountDom.html(uploadCount);

                    for (var i = 0, len = uploadList.length; i < len; ++i) {
                        var file = uploadList[i];
                        if(file.id == id){
                            delete uploadImageList[id];
                            file.stop();
                            break;
                        }
                    }
                    target.remove();
                    gallery.hide();
                });
            }
        });
    });

    var uploadCount = 0, uploadList = [],uploadImageList = [];
    var uploadCountDom = $("#uploadCount");

    try{
        weui.uploader('#uploader', {
            url: "{:U('Wechat/index/downLoadImage')}",
            auto: true,
            type: 'file',
            fileVal: 'fileVal',
//            compress: {
//                width: 1600,
//                height: 1600,
//                quality: .1
//            },
            onBeforeQueued: function(files) {
//                if(["image/jpg", "image/jpeg", "image/png", "image/gif"].indexOf(this.type) < 0){
//                    weui.alert('请上传图片');
//                    return false;
//                }
                if(this.size > 10 * 1024 * 1024){
                    weui.alert('您上传的图片超过10M，请压缩之后重新上传');
                    return false;
                }
                if (files.length > 6) { // 防止一下子选中过多文件
                    weui.alert('最多只能上传6张图片，请重新选择');
                    return false;
                }
                if (uploadCount + 1 > 6) {
                    weui.alert('最多只能上传6张图片');
                    return false;
                }

                ++uploadCount;
                uploadCountDom.html(uploadCount);
            },
            onQueued: function(){
                uploadList.push(this);
            },
            onBeforeSend: function(data, headers){
                // $.extend(data, { test: 1 }); // 可以扩展此对象来控制上传参数
                // $.extend(headers, { Origin: 'http://127.0.0.1' }); // 可以扩展此对象来控制上传头部

                // return false; // 阻止文件上传
            },
            onProgress: function(procent){
                console.log(procent);
            },
            onSuccess: function (ret) {
                uploadImageList[this.id] = ret.data;
            },
            onError: function(err){
            }
        });
    }catch (e){
        alert(e);
    }
</script>