<script>
    $(document).ready(function(e) {

        var counter = 0;
        if (window.history && window.history.pushState) {
            $(window).on('popstate', function () {
                window.history.pushState('forward', null, '#');
                window.history.forward(1);

                //跳转到我的订单
                window.location.href="{:U('Wechat/index/myOrder')}";
            });
        }

        //在IE中必须得有这两行
        window.history.pushState('forward', null, '#');
        window.history.forward(1);
    });
    function cancelOrder(id){
        orderId = id;

        $("#cancelOrder").show()
    }
    function connectServer(){
        $("#server").show()
    }
    function hideTheDialog(id){
        $("#"+id+"").hide()
    }
    function sureCancelOrder(){
        var text = $("input[name='reason']:checked").val();
        if(!text){
            weui.alert('请选择取消原因');
            return false;
        }
        var loading = weui.loading('正在取消订单');
        $.ajax({
            url: "{:U('Wechat/index/updateOrder')}",
            type: 'post',
            dataType: 'json',
            data:{
                id:orderId,
                order_state:4, //0:派单中;1:已接单;2:待支付;3:已支付;4:已取消;5:已电话解决;6:已退款
                order_type:3,  //1设备维修，2门店消杀，3设备清洗
                cancel_text:text,
            },
            success: function (data) {
                loading.hide();
                if(data.status == 1){
                    window.location.href="{:U('Wechat/index/myOrder')}";
                }else{
                    weui.alert('提交失败，请刷新再试！');
                }
            }
        },'json');
    }

    function applyService(order_id,order_code,create_time,update_time){
        //判断时间是否超过售后时间(不超过180天)
        var start = new Date(update_time);
        var end = start.setDate(start.getDate() + 180);//天数+1
        end =  new Date(end);
        var now = new Date();
        if(now > end){
            weui.alert('已超过售后时间！');
            return false;
        }

        window.location.href="{:U('Wechat/index/applyrepaireservice/order_id/"+order_id+"/order_code/"+order_code+"/create_time/"+create_time+"')}";
    }
    //验收完毕
    function confirmOrder(id){
        var loading = weui.loading('正在验收');
        $.ajax({
            url: "{:U('Wechat/index/updateOrder')}",
            type: 'post',
            dataType: 'json',
            data:{
                id:id,
                order_state:3, //0:派单中;1:已接单;2:待支付;3:已支付;4:已取消;5:已电话解决;6:已退款
                order_type:1,  //1设备维修，2门店消杀，3设备清洗
            },
            success: function (data) {
                loading.hide();
                if(data.status == 1){
                    window.location.href="{:U('Wechat/index/showStoreRepaireOrder/orderId/"+data.data.id+"')}";
                }else{
                    weui.alert('提交失败，请刷新再试！');
                }
            }
        },'json');
    }
</script>
